@model CreateLopHocViewsModels

@{ 
    ViewBag.Title = "Create LopHoc";
}
<form enctype="multipart/form-data" asp-controller="LopHoc" asp-action="Create" method="post">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label text-white" asp-for="Name"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name" placeholder="HoTen">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>
    
    <div asp-validation-summary="All"></div>
    <div class="form-group row">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-danger mx-2">Create</button>
            <a class="btn btn-primary mx-2" asp-controller="Home" asp-action="Index">Back</a>
        </div>
    </div>
</form>